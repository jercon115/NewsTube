<%= render 'form' %>

<h4 style="background:white;">Local</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Zipcode</th>
      <th>Channelid</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| 
      if channel.category == 'local' %>
      <tr>
        <td><%= channel.name %></td>
        <td><%= channel.zipcode %></td>
        <td><%= channel.channelid %></td>
        <td><%= link_to 'Show', channel %></td>
        <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
        <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end
    end %>
  </tbody>
</table>
<br/>

